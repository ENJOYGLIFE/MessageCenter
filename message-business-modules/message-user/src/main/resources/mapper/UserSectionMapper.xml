<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hdu.message.user.mapper.UserSectionMapper">

    <resultMap type="com.hdu.message.user.bean.UserSection" id="TblUserSectionMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="sectionId" column="section_id" jdbcType="INTEGER"/>
        <result property="sectionEnum" column="section_enum" jdbcType="VARCHAR" />
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TblUserSectionMap">
        select
        id, user_id, section_id, section_enum, create_time, update_time
        from tbl_user_section
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="sectionId != null">
                and section_id = #{sectionId}
            </if>
            <if test="sectionEnum != null and sectionEnum != ''">
                and section_enum = #{sectionEnum}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
        </where>
    </select>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into tbl_user_section(user_id, section_id, section_enum)
        values
        <foreach collection="list" item="entity" separator=",">
        (#{entity.userId}, #{entity.sectionId}, #{entity.sectionEnum})
        </foreach>
    </insert>

</mapper>

