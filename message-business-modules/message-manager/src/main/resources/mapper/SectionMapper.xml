<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hdu.message.manager.mapper.SectionMapper">

    <resultMap type="com.hdu.message.common.base.entity.Section" id="TblSectionMap">
        <result property="sectionId" column="section_id" jdbcType="INTEGER"/>
        <result property="sectionName" column="section_name" jdbcType="VARCHAR"/>
        <result property="sectionEnum" column="section_enum" jdbcType="VARCHAR"/>
        <result property="sectionContent" column="section_content" jdbcType="VARCHAR" />
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="isDelete" column="is_delete" jdbcType="INTEGER"/>
    </resultMap>

    <sql id = "Base_Column_List">
        section_id, section_name, section_enum, section_content, create_time, update_time, is_delete
    </sql>

    <!--查询单个-->
    <select id="queryById" resultMap="TblSectionMap">
        select
        <include refid="Base_Column_List" />
        from tbl_section
        where section_id = #{sectionId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TblSectionMap">
        select
        <include refid="Base_Column_List" />
        from tbl_section
        <where>
            <if test="sectionId != null">
                and section_id = #{sectionId}
            </if>
            <if test="sectionName != null and sectionName != ''">
                and section_name = #{sectionName}
            </if>
            <if test="sectionEnum != null">
                and section_enum = #{sectionEnum}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
            <if test="isDelete != null">
                and is_delete = #{isDelete}
            </if>
        </where>
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from tbl_section
        <where>
            <if test="sectionId != null">
                and section_id = #{sectionId}
            </if>
            <if test="sectionName != null and sectionName != ''">
                and section_name = #{sectionName}
            </if>
            <if test="sectionEnum != null">
                and section_enum = #{sectionEnum}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
            <if test="isDelete != null">
                and is_delete = #{isDelete}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="sectionId" useGeneratedKeys="true">
        insert into tbl_section(section_name, section_enum, section_content)
        values (#{sectionName}, #{sectionEnum}, #{sectionContent})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into tbl_section(section_name, section_enum, section_content))
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{sectionName}, #{sectionEnum}, #{sectionContent})
        </foreach>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update tbl_section
        <set>
            <if test="sectionName != null and sectionName != ''">
                section_name = #{sectionName},
            </if>
            <if test="sectionEnum != null">
                section_enum = #{sectionEnum},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="isDelete != null">
                is_delete = #{isDelete},
            </if>
        </set>
        where section_id = #{sectionId}
    </update>

</mapper>

